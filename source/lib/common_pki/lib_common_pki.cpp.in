      eagine::embed(EAGINE_ID(mbusRtrCrt), "@EAGINE_EMBED_BRIDGE_CERT@"), ctx);
}
//------------------------------------------------------------------------------
memory::const_block msgbus_endpoint_certificate_pem(main_ctx& ctx) {
