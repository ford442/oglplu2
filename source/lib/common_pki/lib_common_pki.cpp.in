#include "lib_common_pki.hpp"
#include <eagine/resources.hpp>

namespace eagine {
//------------------------------------------------------------------------------
memory::const_block ca_certificate_pem(
  memory::buffer& buf, const program_args& args, logger& log) {

    return fetch_resource(
      string_view{"CA certificate"},
      string_view{"EAGINE_CA_CERT_PATH"},
      string_view{"--ca-cert-path"},
      eagine::embed(EAGINE_ID(eagiCaCert), "@EAGINE_EMBED_CA_CERT@"),
      buf,
      args,
      log);
}
//------------------------------------------------------------------------------
} // namespace eagine
